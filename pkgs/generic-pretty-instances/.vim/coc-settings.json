{
    "languageserver": {
        "haskell": {
            "command": "haskell-language-server-9.0.2",
            "args": ["--lsp"],
            "rootPatterns": [
                "*.cabal",
                "stack.yaml",
                "cabal.project",
                "package.yaml",
                "hie.yaml"
            ],
            "filetypes": [
                "hs",
                "lhs",
                "haskell",
                "lhaskell"
            ]
        }
    }
}
