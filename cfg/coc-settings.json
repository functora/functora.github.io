{
  "codeLens.enable": true,
  "languageserver": {
    "haskell": {
      "command": "haskell-language-server",
      "args": ["+RTS", "-A8m", "-RTS", "--lsp"],
      "rootPatterns": [
        "*.cabal",
        "stack.yaml",
        "cabal.project",
        "package.yaml",
        "hie.yaml"
      ],
      "filetypes": ["haskell", "lhaskell"]
    }
  }
}
